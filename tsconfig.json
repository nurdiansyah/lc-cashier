{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "node",
    "isolatedModules": true,
    "strict": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "resolveJsonModule": true
  },
  "exclude": ["**/*.test.*", "**/*.spec.*", "*.test.*", "*.spec.*"]
}
