{
  "name": "@deboxsoft/accounting",
  "private": true,
  "version": "1.0.0-0",
  "repository": {
    "type": "git",
    "url": "https://github.com/deboxsoft/accounting"
  },
  "license": "./LICENSE",
  "maintainers": [
    {
      "name": "Nurdiansyah",
      "email": "nur.diansyah.ckt@gmail.com"
    }
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "bic",
    "plop-gen": "plop-gen && prettier -w 'packages/*/src/**/*'",
    "release": "pnpm run build && changeset version && pnpm -r publish"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix"
    ]
  },
  "renovate": {
    "extends": [
      "config:base",
      "schedule:monthly"
    ],
    "automerge": true,
    "major": {
      "automerge": false
    }
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "@deboxsoft/plop-generator": "^1.0.1-beta.15",
    "@nurdiansyah/cpx": "1.5.0",
    "@nurdiansyah/eslint-config-devel": "^7.1.1",
    "@types/nanoid": "^2.1.0",
    "@types/nconf": "^0.10.1",
    "@types/node": "^14.17.9",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "chalk": "4.1.0",
    "cross-env": "^5.2.1",
    "eslint": "^7.32.0",
    "eslint-plugin-prettier": "^3.4.0",
    "execa": "^4.1.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "plop": "^2.7.4",
    "prettier": "^2.3.2",
    "prettier-plugin-svelte": "^1.4.2",
    "recrawl-sync": "^2.2.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.56.2",
    "ts-node": "^9.1.1",
    "tslib": "^2.3.1",
    "typescript": "~4.2.4"
  }
}
